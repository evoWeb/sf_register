		"typescript": "< 5.6.0"
	},
	"scripts": {
		"lint:css": "stylelint Sources/Scss/*.scss",
		"lint:ts": "eslint -c .eslintrc.js Sources/TypeScript/*.ts",
		"build:css": "npm run lint:css Sources/Scss/*.scss && webpack --mode=production --config webpack.css.config.js",
